{
    "variables": {
      "security_group_ids": "sg-0120400d5eefb0b9e",
      "create_ova": "false"
    },
    "builders": [
      {
        "access_key": "{{user `aws_access_key`}}",
        "ami_name": "{{user `vm_name`}}-{{user `github_sha`}}",
        "spot_instance_types": ["t2.xlarge", "t3.xlarge"],
        "spot_price": "auto",
        "associate_public_ip_address": true,
        "ssh_interface": "public_ip",
        "region": "{{user `region`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "ssh_username": "ubuntu",
        "ssh_timeout": "5m",
        "type": "amazon-ebs",
        "ami_regions": "{{user `extra_regions`}}",
        "security_group_ids": "{{user `security_group_ids`}}",
        "source_ami": "{{user `ami_id`}}",
        "tags": {
            "OS_Version": "Ubuntu-20.04",
            "Base_AMI_Name": "{{ .SourceAMIName }}",
            "Name": "{{user `vm_name`}}",
            "REST_API": "{{user `cs_api` }}",
            "Filedrop_UI": "{{user `filedrop_ui`}}",
            "K8S_Flavour": "k3s",
            "ICAP_FLAVOUR": "{{user `icap_flavour`}}",
            "SDK": "prod",
            "Github_Run_id": "{{user `github_sha`}}",
            "M_UI": "{{user `install_m_ui`}}",
            "tag": "{{user `latest_tag`}}"
        },
        "run_tags": {
            "Name": "Packer Builder {{user `vm_name`}}",
            "Team": "{{user `team_tag`}}",
            "Owner": "{{user `owner_tag`}}",
            "Scope": "Build AMI",
            "Delete": "No"
        },
        "launch_block_device_mappings": [
          {
            "device_name": "/dev/sda1",
            "volume_type": "gp2",
            "volume_size": 20,
            "delete_on_termination": true
          }
        ]
      }
    ],
      "provisioners": [
        {
            "type": "file",
            "source":"../scripts/agent",
            "destination":"/tmp/"
        },
        {
            "type": "file",
            "source":"./setup",
            "destination":"/tmp/"
        },
        {
            "type": "shell",
            "inline": [
                "chmod +x /tmp/setup/setup.sh",
                "cd /tmp/setup",
                "./setup.sh"
            ]
        },
        {
            "type": "shell-local",
            "inline_shebang": "/bin/bash",
            "inline": [
                "set -e",
                "CREATE_OVA={{user `create_ova`}}",
                "if [[ $CREATE_OVA == 'true' ]]; then",
                "aws ec2 create-instance-export-task --region {{user `region`}} --instance-id {{build `ID`}} --target-environment vmware --export-to-s3-task file://ova-export.json > out.json",
                "fi"
            ]
        },
        {
            "type": "shell-local",
            "script": "ova-check.sh",
            "environment_vars": ["OVA_NAME=icap-server-{{user `github_sha`}}.ova", "VM_NAME={{user `vm_name`}}", "CREATE_OVA={{user `create_ova`}}", "FILEDROP_UI={{user `filedrop_ui`}}", "CS_K8S_API={{user `cs_api`}}", "INSTALL_M_UI={{user `install_m_ui`}}", "ICAP_FLAVOUR={{user `icap_flavour`}}"]
        }
    ]
}
